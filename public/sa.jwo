    <script>
        const cardTitles = document.querySelectorAll(".card-title a");
        const originalTitles = Array.from(cardTitles).map(title => title.textContent);

        function getRandomTitle() {
            const randomIndex = Math.floor(Math.random() * originalTitles.length);
            return originalTitles[randomIndex];
        }

        function updateRandomContent(title) {
            const randomContentDiv = document.getElementById("randomContent");
            randomContentDiv.innerHTML = title;
        }

        updateRandomContent(getRandomTitle());

        setInterval(() => {
            updateRandomContent(getRandomTitle());
        }, 5000);

    </script>


<script>
    const searchInput = document.querySelector(".search-input");
    const searchResultsDiv = document.querySelector(".search-results");

    searchInput.addEventListener("input", function() {
        const searchTerm = this.value;

        if (searchTerm.length >= 3) {
            searchResultsDiv.innerHTML = "Arama yapılıyor...";

            $.ajax({
                method: "GET",
                url: "search.php", // Değiştirmeniz gereken URL
                data: { q: searchTerm },
                success: function(data) {
                    searchResultsDiv.innerHTML = data;
                },
                error: function() {
                    searchResultsDiv.innerHTML = "Arama sırasında bir hata oluştu.";
                }
            });
        } else {
            searchResultsDiv.innerHTML = "";
        }
    });
</script>
